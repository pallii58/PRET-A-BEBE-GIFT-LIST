{
  "functions": {
    "api/webhooks/orders-create.js": {
      "maxDuration": 10,
      "memory": 256
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors https://admin.shopify.com https://*.myshopify.com;"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/public/gift/:slug", "destination": "/api/public/gift/:slug" },
    { "source": "/create", "destination": "/index.html" },
    { "source": "/gift/:slug", "destination": "/index.html" }
  ]
}
