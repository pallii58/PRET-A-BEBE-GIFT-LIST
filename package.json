{
  "name": "lista-regali-pret-a-bebe",
  "author": "Gabriele Toma",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:server dev:client",
    "dev:server": "node backend/server.js",
    "dev:client": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build && cd .. && rm -rf public && mkdir -p public && cp -R frontend/dist/* public/",
    "migrate": "node backend/db/migrate.js",
    "postinstall": "cd frontend && npm install"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.87.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "joi": "^17.11.0",
    "knex": "^3.1.0",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
